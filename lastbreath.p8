function p_init()
	p={}
	p.x=56
	p.y=56
	p.dx=0
	p.dy=0
	p.g=0.05
	p.s=1
	p.fs=3
	p.fy=16
	p.fxl=0
	p.fxr=6
end

function p_update()
	p.dy+=p.g
	
	if btn(0) then
		p.dy-=p.g*2
		p.dx-=p.g*0.5
	else
		if (p.dx<0) p.dx+=p.g*0.25
	end
	
	if btn(1) then
		p.dy-=p.g*2
		p.dx+=p.g*0.5
	else
		if (p.dx>0) p.dx-=p.g*0.25
	end
	
	p.x+=p.dx
	p.y+=p.dy
end

function p_draw()
	spr(p.s,p.x,p.y,2,2)
	if (btn(0)) spr(p.fs,p.x+p.fxl,p.y+p.fy)
	if (btn(1)) spr(p.fs,p.x+p.fxr,p.y+p.fy)
end
